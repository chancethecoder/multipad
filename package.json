{
  "name": "multipad",
  "productName": "Multipad",
  "description": "Simple memo app created by electron",
  "version": "0.0.0",
  "author": {
    "name": "Youngkyun Kim",
    "email": "chancethecoder@gmail.com",
    "url": "https://github.com/chancethecoder"
  },
  "bugs": {
    "url": "https://github.com/chancethecoder/multipad/issues"
  },
  "homepage": "https://github.com/chancethecoder/multipad",
  "license": "MIT",
  "main": "app/background.js",
  "build": {
    "appId": "com.electron.multipad",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ]
  },
  "scripts": {
    "postinstall": "install-app-deps",
    "build": "gulp build",
    "prerelease": "gulp build --env=production",
    "release": "build",
    "start": "gulp start",
    "pretest": "gulp build-unit --env=test",
    "test": "electron-mocha app/specs.js.autogenerated --renderer --require source-map-support/register",
    "coverage": "npm test -- -R scripts/istanbul-reporter",
    "pree2e": "gulp build-e2e --env=test",
    "e2e": "mocha app/e2e.js.autogenerated --require source-map-support/register"
  },
  "dependencies": {
    "bootstrap": "^3.3.2",
    "electron-mocha": "^3.0.0",
    "font-awesome": "^4.7.0",
    "fs-jetpack": "^0.10.2",
    "jquery": "^3.1.1",
    "moment": "^2.17.1",
    "quill": "^1.1.8",
    "sqlite3": "^3.1.8"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "electron": "^1.4.7",
    "electron-builder": "^8.6.0",
    "gulp": "^3.9.0",
    "gulp-batch": "^1.0.5",
    "gulp-less": "^3.0.3",
    "gulp-plumber": "^1.1.0",
    "gulp-util": "^3.0.6",
    "gulp-watch": "^4.3.5",
    "istanbul": "^0.4.3",
    "minimist": "^1.2.0",
    "mocha": "^3.0.2",
    "rollup": "^0.36.3",
    "rollup-plugin-istanbul": "^1.1.0",
    "source-map-support": "^0.4.2",
    "spectron": "^3.3.0"
  }
}
